---
interface Props {
  title: string;
  paragraphs: string[];
  className?: string;
}

const { title, paragraphs = [], className = "" } = Astro.props as Props;
---

<section class={`py-12 md:py-16 bg-bg ${className}`}>
  <div class="w-95/100 mx-auto max-w-[1400px]">
    <h2 class="text-3xl md:text-4xl font-extrabold text-white mb-8">
      {title}
    </h2>
    <div class="space-y-6">
      {paragraphs.map((paragraph) => (
        <p class="text-lg md:text-xl leading-relaxed text-text-secondary">
          {paragraph}
        </p>
      ))}
    </div>
  </div>
</section>
