---
import { Image } from "astro:assets";

export interface Props {
  id?: string;
  title: string;
  paragraphs: string[];
  checklistTitle: string;
  checklistItems: string[];
  image: any;
  imageAlt?: string;
  className?: string;
}

const {
  id,
  title,
  paragraphs = [],
  checklistTitle,
  checklistItems = [],
  image,
  imageAlt = "",
  className = "",
} = Astro.props as Props;
---

<section id={id} class={`scroll-mt-36 mb-12 md:mb-16 ${className}`}>
  <div class="grid grid-cols-1 lg:grid-cols-[1.2fr_0.8fr] gap-8 lg:gap-10 items-start">
    <div class="order-2 lg:order-1 sticky-section self-start">
      <h2 class="text-3xl md:text-4xl font-extrabold text-white mb-5">
        {title}
      </h2>

      {paragraphs.map((paragraph, index) => (
        <p class={`text-text-secondary text-lg leading-relaxed ${index === paragraphs.length - 1 ? "mb-6" : "mb-4"}`}>
          {paragraph}
        </p>
      ))}

      <h4 class="text-xl font-extrabold font-display uppercase text-white mb-4">
        {checklistTitle}
      </h4>
      <ul class="space-y-3">
        {checklistItems.map((item) => (
          <li class="flex items-start gap-2 text-text-secondary">
            <span class="gold-metallic-heading mt-0.5">âœ“</span>
            {item}
          </li>
        ))}
      </ul>
    </div>

    <div class="order-1 lg:order-2 sticky-section self-start">
      <Image
        src={image}
        alt={imageAlt}
        class="w-full h-auto block rounded-xl border border-primary/20"
        loading="lazy"
      />
    </div>
  </div>
</section>
