---
// src/components/ContentRenderer/variants/ListVariant.astro
/**
 * List Variant - Stack of links
 * Features: Horizontal or vertical layout, footer-friendly styling
 */

import type { BaseVariantProps } from "../ContentRenderer.types";
import Button from "@/components/Button/Button";
import { shouldShowCollectionCTA } from "../utils/helpers";

interface Props extends BaseVariantProps {
  layout?: "horizontal" | "vertical";
}

const {
  items = [],
  title,
  description,
  className = "",
  collectionUrl,
  collectionTitle,
  id,
  layout = "horizontal",
} = Astro.props as Props;

const viewAllText = `See Complete ${collectionTitle || "List"}`;

const layoutClasses = layout === "vertical"
  ? "flex-col items-start gap-2"
  : "flex-row flex-wrap gap-2";
---

<div id={id} class={className}>
  {
    (title || description) && (
      <div class="mb-6">
        {title && <h2 class="text-2xl text-heading font-bold mb-2">{title}</h2>}
        {description && (
          <p class="text-text">{description}</p>
        )}
      </div>
    )
  }

  {
    items.length > 0 && (
      <nav class={`flex ${layoutClasses} list-none`}>
        {items.map((item) => (
          <Button
            href={item.url}
            variant="link"
            target={item.openInNewTab ? "_blank" : undefined}
            rel={item.openInNewTab ? "noopener noreferrer" : undefined}
          >
            {item.title}
          </Button>
        ))}
      </nav>
    )
  }

  {
    shouldShowCollectionCTA(collectionUrl, items.length) && (
      <div class="mt-6">
        <Button href={collectionUrl} variant="link">
          {viewAllText} â†’
        </Button>
      </div>
    )
  }
</div>