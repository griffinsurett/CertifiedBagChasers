---
// src/layouts/OtherHero.astro
/**
 * Other Hero Layout
 *
 * Hero section with gradient background (no image).
 * Features:
 * - Dark gradient background with gold/green accents
 * - Product icon display
 * - Title with gold metallic styling option
 * - Price and price note
 * - CTA button
 * - Decorative lines overlay
 */

import Button from "@/components/Button/Button";
import Icon from "@/components/Icon";

export interface Props {
  title: string;
  description?: string;
  icon?: string;
  price?: string;
  priceNote?: string;
  ctaText?: string;
  ctaLink?: string;
  status?: "available" | "coming-soon" | "free";
  tags?: string[];
  className?: string;
  minHeight?: string;
}

const {
  title,
  description,
  icon,
  price,
  priceNote,
  ctaText = "Get Started",
  ctaLink,
  status = "available",
  tags = [],
  className = "",
  minHeight = "70vh",
} = Astro.props;

const isMostPopular = tags?.includes("most-popular");
const isPremiumOffering = tags?.includes("premium-offering");
const isComingSoon = status === "coming-soon";

// Determine button variant based on product tags
const buttonVariant = isMostPopular ? "primary" : isPremiumOffering ? "tertiary" : "secondary";
---

<section class={`relative ${className}`}>
  <div
    class="hero-gradient relative flex items-center justify-center overflow-hidden px-5 hero-space"
    style={`min-height: ${minHeight}`}
  >
    {/* Decorative lines overlay */}
    <div class="hero-lines absolute inset-0 opacity-10 pointer-events-none"></div>

    {/* Hero content */}
    <div class="relative z-10 max-w-4xl mx-auto text-center">
      {/* Status Badge */}
      {isComingSoon && (
        <div class="inline-block bg-gradient-to-r from-primary-800 via-primary to-primary-100 text-bg py-1.5 px-4 rounded-full text-xs font-bold uppercase tracking-[1px] mb-6">
          ðŸš€ Coming Soon
        </div>
      )}

      {/* Most Popular Badge */}
      {isMostPopular && !isComingSoon && (
        <div class="inline-block bg-gradient-to-r from-primary-800 via-primary to-primary-100 text-bg py-1.5 px-4 rounded-full text-xs font-bold uppercase tracking-[1px] mb-6">
          ðŸ”¥ Most Popular
        </div>
      )}

      {/* Icon */}
      {icon && (
        <div class="mb-6 flex items-center justify-center">
          <Icon icon={icon} size="xl" className="text-primary w-20 h-20" />
        </div>
      )}

      {/* Title */}
      <h1 class="hero-heading text-4xl md:text-5xl lg:text-6xl leading-tight mb-4">
        <span class="gold-metallic-heading">{title}</span>
      </h1>

      {/* Description */}
      {description && (
        <p class="text-lg md:text-xl text-text-secondary max-w-2xl mx-auto mb-6 leading-relaxed">
          {description}
        </p>
      )}

      {/* Price */}
      {price && (
        <div class="mb-8">
          <div class="text-5xl md:text-6xl font-extrabold text-white mb-2">
            {price}
          </div>
          {priceNote && (
            <span class="text-text-dim text-sm">
              {priceNote}
            </span>
          )}
        </div>
      )}

      {/* CTA Button */}
      {ctaLink && (
        <Button
          href={ctaLink}
          variant={buttonVariant}
          size="lg"
        >
          {ctaText} â†’
        </Button>
      )}
    </div>
  </div>

  {/* Optional slot for additional content below hero */}
  <slot />
</section>

<style>
  /* Hero gradient background */
  .hero-gradient {
    background:
      linear-gradient(135deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.9) 100%),
      radial-gradient(ellipse at bottom left, rgba(201,162,39,0.15) 0%, transparent 50%),
      radial-gradient(ellipse at top right, rgba(34,87,67,0.2) 0%, transparent 50%),
      #0a0a0a;
  }

  /* Decorative lines */
  .hero-lines {
    background:
      linear-gradient(45deg, transparent 40%, rgba(201, 162, 39, 0.3) 45%, transparent 50%),
      linear-gradient(-45deg, transparent 40%, rgba(34, 87, 67, 0.3) 45%, transparent 50%);
  }

  /* Hero heading styles */
  .hero-heading {
    font-family: var(--font-display);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  /* Gold metallic heading gradient */
  .gold-metallic-heading {
    background: linear-gradient(
      170deg,
      #fffde8 0%,
      #f7e588 8%,
      #dfc040 20%,
      #c9a227 35%,
      #b8922a 50%,
      #8a6a18 70%,
      #5c4510 90%,
      #3d2e0a 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(2px 3px 0px #2a1d05) drop-shadow(3px 6px 8px rgba(0, 0, 0, 0.7));
  }
</style>
